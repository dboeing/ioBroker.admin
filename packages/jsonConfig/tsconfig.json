{
  "extends": "../admin/src/tsconfig.json",
  "include": ["./src"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "outDir": "./build",
    "sourceMap": true,
    "sourceRoot": "./src",
    "noImplicitAny": true,
    "lib": [
      "es2018",
      "DOM"
    ],
    "jsx": "react",
    "types": [
      "@iobroker/types"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
  }
}