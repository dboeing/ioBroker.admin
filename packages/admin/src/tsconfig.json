// Specialized tsconfig for the admin directory,
// includes DOM typings and configures the admin build
{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "checkJs": true,
    "noEmit": false,
    "outDir": "./build",
    "sourceMap": true,
    "sourceRoot": "./src",
    "noImplicitAny": true,
    "lib": [
      "es2018",
      "DOM"
    ],
    "jsx": "react",
    "types": [
      "@iobroker/types"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}