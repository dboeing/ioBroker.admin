// Specialized tsconfig for the admin directory,
// includes DOM typings and configures the admin build
{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "noEmit": false,
    "outDir": "./build",
    "sourceMap": true,
    "sourceRoot": "./src",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "lib": [
      "es2018",
      "DOM"
    ],
    "jsx": "react",
    "types": [
      "@iobroker/types"
    ],
    // need to be relative to base config
    "paths": {
      "@/*": [
        "./src/*"
      ],
    },
  },
  "include": ["./**/*"]
}