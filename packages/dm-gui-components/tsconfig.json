{
  "extends": "../admin/src/tsconfig.json",
  "include": ["./src"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": false,
    "declaration": true,
    "outDir": "./build",
    "sourceMap": true,
    "sourceRoot": "./src",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "lib": [
      "es2018",
      "DOM"
    ],
    "jsx": "react",
    "types": [
      "@iobroker/types"
    ],
    // need to be relative to base config
    "paths": {
      "@/*": [
        "./packages/dm-gui-components/src/*"
      ],
    },
  },
}